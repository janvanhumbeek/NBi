<?xml version="1.0" encoding="utf-8" ?>
<testSuite name="Ranking TestSuite" xmlns="http://NBi/TestSuite">
  <test name="With ranking top" uid="0000">
    <system-under-test>
      <resultSet>
        <query name="Select first departments">
          select row_count as DeptId, [Name], [GroupName] from [HumanResources].[Department] order by Name
        </query>
        <alteration>
          <filter>
            <ranking operand="#1">
              <top/>
            </ranking>
          </filter>
        </alteration>
      </resultSet>
    </system-under-test>
    <assert>
      <all-rows>
        <predicate name="ModDepId">
          <more-than or-equal="true">10</more-than>
        </predicate>
      </all-rows>
    </assert>
  </test>
  <test name="With ranking bottom, count and group-by with operand" uid="0001">
    <system-under-test>
      <resultSet>
        <query name="Select first departments">
          select row_count as DeptId, [Name], [GroupName] from [HumanResources].[Department] order by Name
        </query>
        <alteration>
          <filter>
            <ranking operand="#2">
              <bottom count="3"/>
              <group-by>
                <column identifier="#0" type="dateTime"/>
                <column identifier="#1"/>
              </group-by>
            </ranking>
          </filter>
        </alteration>
      </resultSet>
    </system-under-test>
    <assert>
      <all-rows>
        <predicate operand="ModDepId">
          <more-than or-equal="true">10</more-than>
        </predicate>
      </all-rows>
    </assert>
  </test>
  <test name="With ranking top, count and group-by case" uid="0002">
    <system-under-test>
      <result-set>
        <query name="Select first departments">
          select row_count as DeptId, [Name], [GroupName] from [HumanResources].[Department] order by Name
        </query>
        <alteration>
          <filter>
            <ranking operand="#2">
              <top count="3"/>
              <group-by>
                <case>
                  <predicate operand="#1">
                    <lower-case/>
                  </predicate>
                </case>
                <case>
                  <combination operator="and">
                    <predicate operand="#1">
                      <upper-case/>
                    </predicate>
                    <predicate operand="#0">
                      <less-than>10</less-than>
                    </predicate>
                  </combination>
                </case>
              </group-by>
            </ranking>
          </filter>
        </alteration>
      </result-set>
    </system-under-test>
    <assert>
      <all-rows>
        <predicate operand="ModDepId">
          <more-than or-equal="true">10</more-than>
        </predicate>
      </all-rows>
    </assert>
  </test>
</testSuite>
